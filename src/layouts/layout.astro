---
import '@/styles/global.css';

interface Props {
  description?: string;
  title?: string;
}

const title = Astro.props.title || 'Timely.rest - Free Online Timer for Maximum Focus | Timely';
const description =
  Astro.props.description || `Free Online Timer for Maximum Focus`;
---

<!doctype html>
<html lang="en">
  <head>
 
    <meta charset="UTF-8" />
    <meta content="width=device-width" name="viewport" />
    <meta content={Astro.generator} name="generator" />
    <meta content="#18181b" name="theme-color" />
    <link href="/favicon.svg" rel="icon" type="image/svg+xml" />

     <title>{title}</title>
  <meta content={title} name="title" />
  <meta content={description} name="description" />

  <script is:inline>
  (function(w, d, s, l, i) {
    w[l] = w[l] || [];
    function g() {
      w[l].push(arguments);
    }
    g('js', new Date());

    s = d.createElement('script');
    s.src = 'https://www.googletagmanager.com/gtag/js?id=' + i;
    d.getElementsByTagName('head')[0].appendChild(s);
  })(window, document, 'script', 'dataLayer', 'G-S3NTSYKNGX'); // Replace 'G-S3NTSYKNGX' with your ID
</script>
    <meta content={title} property="og:title" />
    <meta content={description} property="og:description" />
    <meta content="Timely" property="og:site_name" />
    <meta content="https://timely.rest/" property="og:url" />
    <meta content="website" property="og:type" />
    <meta content="https://timely.rest/og.png" property="og:image" />

    <meta content="summary_large_image" name="twitter:card" />
  </head>
  <body>
    <slot />
  </body>
</html>
